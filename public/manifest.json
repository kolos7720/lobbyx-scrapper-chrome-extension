{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "LobbyX Scrapper",
  "action": {
    "default_title": "Click to open panel"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "options_page": "options.html",
  "permissions": [
    "scripting",
    "tabs",
    "sidePanel",
    "commands",
    "contextMenus",
    "storage"
  ],
  "host_permissions": ["https://hirefire.thelobbyx.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open_side_panel": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "Command+Shift+L"
      },
      "description": "Open the side panel"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://hirefire.thelobbyx.com/"],
      "js": ["content.js"]
    }
  ]
}
